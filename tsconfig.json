{
  "include": ["src/**/*"],
  "exclude": ["node_modules/*"],
  "baseUrl": "./",
  "paths": {
    "tslib" : ["./node_modules/tslib/tslib.d.ts"]
  },
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
	"strictNullChecks": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ]
  },
}
